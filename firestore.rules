rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️⚠️⚠️ DEVELOPMENT MODE - MUST CHANGE BEFORE PRODUCTION! ⚠️⚠️⚠️
    // Clerk does not integrate with Firebase Auth natively.
    // All security is handled at the application layer via Clerk.
    // TODO: Implement Clerk JWT verification via Firebase Functions before production.
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
